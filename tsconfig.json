{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "target": "es6",
    "module": "commonjs", 
    "lib": [
      "ES2015",
      "ES2017",
      "DOM"
    ], 
    "outDir": "dist", 
    "declarationDir": "dist",
    "declaration": true,
    "strict": true, 
    "noImplicitAny": true,
    "moduleResolution": "node", 
    "baseUrl": "./",
    "types": [
      "node"
    ], 
    "esModuleInterop": true, 
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
  },
  "exclude": [
    "node_modules",
    "client"
  ],
}